# flask configuration
SECRET_KEY=your-secret-key-here

# database configuration
# Option A: provide full DATABASE_URL
DATABASE_URL=

# Option B: granular configuration (used when DATABASE_URL is empty)
DB_ENGINE=postgresql
DB_HOST=db
DB_PORT=5432
DB_NAME=canvas_clay
DB_USER=canvas_db
DB_PASSWORD=clay123

# database security
DB_SSL_MODE=prefer           # use "require" in production
DB_SSL_ROOT_CERT=            # optional path to CA cert inside container

# connection pooling
DB_POOL_SIZE=5
DB_POOL_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_POOL_PRE_PING=true

# session security (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False

# bootstrap admin configuration
# this email will be automatically promoted to admin role on startup
BOOTSTRAP_ADMIN_EMAIL=admin@canvas-clay.local
BOOTSTRAP_ADMIN_PASSWORD=ChangeMe123
